<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="flexrow">
      <div class="header-fields">
        <h1 class="charname">
          <input
            class="header-field"
            name="name"
            type="text"
            value="{{item.name}}"
            placeholder="{{localize "lancer.placeholder.name"}}"
          />
        </h1>
      </div>
      {{{ ref-portrait-img item.img "img" mm }}}
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{{textarea-card "DESCRIPTION" "mm.Description"}}}
    <div class="card">
      <span class="lancer-header">TAG META INFO</span>
      {{{ std-string-input "mm.LID" label="ID:"  }}}
      {{{ std-checkbox "mm.Hidden" label="Hidden:"  label_classes="self-left" }}}
      {{{ std-checkbox "mm.FilterIgnore" label="Filter Ignore:"  label_classes="self-left" }}}
    </div>
  </section>
</form>
